<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <RichTextBox x:Name="richTextBox" Margin="0,53,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="opensButton" Content="Open" HorizontalAlignment="Left" VerticalAlignment="Top" Height="53" Width="161" Click="OpensButton_Click"/>
        <Button x:Name="overwritesButton" Content="Overwrite" Height="53" VerticalAlignment="Top" Click="OverwritesButton_Click_1" HorizontalAlignment="Right" Width="148"/>
        <Button x:Name="refreshesButton" Content="Refresh" Height="53" Margin="0,0,148,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="162" Click="refreshesButton_Click"/>

    </Grid>
</Window>
